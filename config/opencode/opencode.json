{
  "$schema": "https://opencode.ai/config.json",

  "agent": {
    "plan": {
      // "model": "openai/gpt-5.1-codex-high",
      "permission": {
        "bash": {
          "echo *": "allow",
          "find *": "allow",
          "grep *": "allow",
          "rg *": "allow",
          "fd *": "allow",
          "head *": "allow",
          "tail *": "allow"
        }
      }
    },
    "build": {
      // "model": "github-copilot/gpt-5.1-codex-max",
      // "prompt": "./prompts/codex.md"
    }
  },

  "experimental": {
    "disable_paste_summary": true
  },

  "instructions": ["AGENTS.md", ".github/copilot-instructions.md"],

  "keybinds": {
    "messages_page_down": "ctrl+d",
    "messages_page_up": "ctrl+u"
  },

  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "graphiti": {
      "type": "remote",
      "url": "http://localhost:48000/mcp",
      "enabled": true
    },
    "github": {
      "type": "remote",
      "enabled": false,
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_MCP_KEY}"
      }
    }
  },

  "plugin": [
    "opencode-skills@latest",
    "opencode-gemini-auth@latest",
    "opencode-openai-codex-auth@latest"
  ],

  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": ["reasoning.encrypted_content"],
        "store": false
      },
      "models": {
        "gpt-5.2-none": {
          "name": "GPT 5.2 None (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "options": {
            "reasoningEffort": "none",
